{
  "manifest_version": 3,
  "name": "QuickGestures - Mouse Gesture Navigation",
  "version": "0.1.39",
  "description": "Transform browsing with intuitive mouse gestures - navigate, manage tabs & search with fluid mouse movements",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "sessions"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png",
    "256": "assets/icons/icon-256.png"
  },
  "action": {
    "default_title": "QuickGestures Options",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png",
      "256": "assets/icons/icon-256.png"
    }
  }
}
